# =============================================================================
# API Rate Limiter - Environment Variables Template
# =============================================================================
# Copy this file to .env and update the values as needed
# =============================================================================

# Server Configuration
SERVER_PORT=8080

# Redis Configuration
REDIS_ADDR=redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# PostgreSQL Configuration
# For local Docker: postgres://postgres:password@postgres:5432/ratelimiter?sslmode=disable
# For Neon Cloud: postgresql://user:pass@host/db?sslmode=require
POSTGRES_DSN=postgres://postgres:password@postgres:5432/ratelimiter?sslmode=disable

# Kafka Configuration
KAFKA_BROKERS=kafka:9092
KAFKA_TOPIC=abuse-events

# JWT Configuration (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-me

# Backend Service URL (for reverse proxy)
BACKEND_URL=http://backend:9000

# Rate Limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX=100
